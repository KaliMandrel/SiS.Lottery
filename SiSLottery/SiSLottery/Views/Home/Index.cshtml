<div>
    <div class="h3">Create lottery</div>
    <div>
        <form class="lottery-form">
            <div class="form-group"><label for="draw-name">Name: </label><input id="draw-name" type="text" class="form-control" /></div>
            <div class="form-group"><label for="draw-description">Description: </label><input id="draw-description" type="text" class="form-control" /></div>
            <div class="form-group"><label for="draw-date">Date: </label><input id="draw-date" type="date" class="form-control" /></div>
            <div class="form-group"><label for="draw-primary-count">Primary Number Count: </label><input id="draw-primary-count" type="text" class="form-control" /></div>
            <div class="form-group"><label for="draw-primary-range-min">Primary Number Range: </label><input id="draw-primary-range-min" type="text" class="form-control" /></div>
            <div class="form-group"><label for="draw-primary-range-max">To: </label><input id="draw-primary-range-max" type="text" class="form-control" /></div>
            <div class="form-group"><label for="draw-secondary-count">Secondary Number Count:</label><input id="draw-secondary-count" type="text" class="form-control" /></div>
            <div class="form-group"><label for="draw-secondary-range-min">Secondary Number Range: </label><input id="draw-secondary-range-min" type="text" class="form-control" /></div>
            <div class="form-group"><label for="draw-secondary-range-max">To: </label><input id="draw-secondary-range-max" type="text" class="form-control" /></div>
            <button class="submit-draw">Submit</button>
        </form>
    </div>
    <div class="h3">Insert winning numbers</div>
    <div>
        <form class="result-form">
            <div class="form-group"><label for="result-name">Name: </label><select id="result-name" class="form-control"></select></div>
            <div class="form-group"><label for="result-date">Date: </label><input id="result-date" type="date" class="form-control" /></div>
            <div class="form-group"><label for="result-primary-numbers">Primary Nubers</label><div class="result-primary-numbers"></div></div>
            <div class="form-group"><label for="result-secondary-numbers">Secondary Nubers</label><div class="result-secondary-numbers"></div></div>
            <button class="submit-results">Submit numbers</button>
        </form>
    </div>
</div>